{
    "multipart": [
        {
            "when": { "facing": "north" },
            "apply": { "model": "projectsteam_crafting:block/sieve", "y": 90 }
        },
        {
            "when": { "facing": "south" },
            "apply": { "model": "projectsteam_crafting:block/sieve", "y": 270 }
        },
        {
            "when": { "facing": "west" },
            "apply": { "model": "projectsteam_crafting:block/sieve", "y": 0 }
        },
        {
            "when": { "facing": "east" },
            "apply": { "model": "projectsteam_crafting:block/sieve", "y": 180 }
        },
        {
            "when" : {"has_hopper" : "true", "facing": "south"},
            "apply": { "model": "projectsteam_crafting:block/sieve_hopper_upgrade", "y": 270 }
        },
        {
            "when" : {"has_hopper" : "true", "facing": "north"},
            "apply": { "model": "projectsteam_crafting:block/sieve_hopper_upgrade", "y": 90 }
        },
        {
            "when" : {"has_hopper" : "true", "facing": "west"},
            "apply": { "model": "projectsteam_crafting:block/sieve_hopper_upgrade", "y": 0 }
        },
        {
            "when" : {"has_hopper" : "true", "facing": "east"},
            "apply": { "model": "projectsteam_crafting:block/sieve_hopper_upgrade", "y": 180 }
        }
    ]
}
